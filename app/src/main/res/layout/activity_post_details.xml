<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    android:scaleType="centerCrop"

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/ivProfilePic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:src="@drawable/empty" />
        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="rahul"
            android:textSize="20sp"
            android:layout_alignTop="@+id/ivProfilePic"
            android:layout_alignBottom="@+id/ivProfilePic"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/ivProfilePic"
            android:textStyle="bold"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_alignParentStart="true"
            >

        </ImageView>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvNumLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="0 likes"
        android:layout_margin="8dp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:scaleType="centerCrop">

        <ImageButton
            android:id="@+id/btnLike"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:src="@drawable/ufi_heart"
            android:scaleType="fitXY"
            android:background="@color/colorWhite">

        </ImageButton>

        <ImageButton
            android:id="@+id/btnComment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:layout_margin="8dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ufi_comment"
            android:background="@color/colorWhite">

        </ImageButton>

        <ImageButton
            android:id="@+id/btnReply"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ufi_new_direct"
            android:scaleType="fitXY"
            android:layout_margin="8dp"
            android:layout_marginLeft="8dp"
            android:background="@color/colorWhite">
        </ImageButton>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1">


        </View>

        <ImageButton
            android:id="@+id/btnBookmark"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:background="@color/colorWhite"
            android:scaleType="fitXY"
            android:src="@drawable/ufi_save">

        </ImageButton>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tvUsername2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rahul"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nice day today! ðŸ˜„"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="0dp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvItems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/etItem"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp" />
    <TextView
        android:id="@+id/tvTimeStamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:textColor="@color/colorGray"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="0dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        >
    <EditText
        android:id="@+id/etComment"
        android:layout_width="300dp"
        android:layout_marginRight="0dp"
        android:layout_height="wrap_content">

    </EditText>

        <Button
            android:id="@+id/btnPostComment"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:layout_toRightOf="@+id/etComment"
            android:background="@drawable/roundshapebtn"
            android:text="Post"
            android:textColor="@color/colorWhite"></Button>
    </RelativeLayout>

</LinearLayout>